
{% section 'edge-product' %}

<style>
  /* Hide default breadcrumbs, product info, etc. for the EDGE product page */
  {% if product.handle == 'edge-power-stroker' %}
    .shopify-section:not(.shopify-section-edge-product) {
      display: none;
    }
    
    #shopify-section-header,
    #shopify-section-footer {
      display: block;
    }
  {% endif %}
</style>

{{ 'edge-product.css' | asset_url | stylesheet_tag }}
{{ 'edge-product-dark.css' | asset_url | stylesheet_tag }}
{{ 'edge-product.js' | asset_url | script_tag }}

{% comment %}
Add Google Fonts for Figtree font family
{% endcomment %}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Figtree:wght@300;400;500;600;700&display=swap">

{% comment %}
Reviews section with Okendo Widget
{% endcomment %}
<section class="reviews-section">
  <div class="container">
    <h2>Customer Reviews</h2>
    <div class="okendo-reviews-container">
      <div id="okendo-reviews-widget">
        <div class="app-wrapper sf-section-padding">
          <div class="container section-my">
            <div class="app-wrapper__content">
              <div class="shopify-block shopify-app-block">
                <div data-oke-widget data-oke-reviews-product-id="shopify-{{ product.id }}"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

